{
  "services": [
    {
      "type": "web",
      "name": "restobill-backend",
      "env": "python",
      "region": "oregon",
      "plan": "starter",
      "buildCommand": "cd backend && pip install -r requirements.txt",
      "startCommand": "cd backend && python main.py",
      "envVars": [
        {
          "key": "ENVIRONMENT",
          "value": "production"
        },
        {
          "key": "HOST",
          "value": "0.0.0.0"
        },
        {
          "key": "PORT",
          "value": "10000"
        },
        {
          "key": "DEBUG",
          "value": "false"
        },
        {
          "key": "LOG_LEVEL",
          "value": "INFO"
        },
        {
          "key": "DB_NAME",
          "value": "restrobill"
        },
        {
          "key": "JWT_ALGORITHM",
          "value": "HS256"
        },
        {
          "key": "MAX_FILE_SIZE",
          "value": "5242880"
        },
        {
          "key": "RATE_LIMIT_PER_MINUTE",
          "value": "100"
        },
        {
          "key": "MONGO_URL",
          "sync": false
        },
        {
          "key": "JWT_SECRET",
          "generateValue": true
        },
        {
          "key": "CORS_ORIGINS",
          "value": "https://restobill-frontend.onrender.com"
        },
        {
          "key": "RAZORPAY_KEY_ID",
          "sync": false
        },
        {
          "key": "RAZORPAY_KEY_SECRET",
          "sync": false
        },
        {
          "key": "LLM_API_KEY",
          "sync": false
        }
      ]
    },
    {
      "type": "static",
      "name": "restobill-frontend",
      "buildCommand": "cd frontend && npm install --legacy-peer-deps && npm run build",
      "staticPublishPath": "frontend/build",
      "pullRequestPreviewsEnabled": false,
      "envVars": [
        {
          "key": "REACT_APP_API_URL",
          "value": "https://restobill-backend.onrender.com/api"
        },
        {
          "key": "REACT_APP_ENVIRONMENT",
          "value": "production"
        },
        {
          "key": "CI",
          "value": "false"
        },
        {
          "key": "REACT_APP_RAZORPAY_KEY_ID",
          "sync": false
        }
      ]
    }
  ]
}
